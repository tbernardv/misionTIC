@page
@model ProyectoCiclo3.App.Frontend.Pages.EditUsuarioModel
@{
    var usuario = Model.Usuario;
}
 
<div class="text-center">
    <form method="post">
    <label for="id" class="form-label">id:</label>
    <input type="number" class="form-control" id="id" name="id" placeholder="id" asp-for="@usuario.id">
    <label for="nombre" class="form-label">Nombre:</label>
    <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Nombre" asp-for="@usuario.nombre">
    <label for="apellidos" class="form-label">Apellidos:</label>
    <input type="text" class="form-control" id="apellidos" name="apellidos" placeholder="Apellidos" asp-for="@usuario.apellidos">
    <label for="direccion" class="form-label">Direcci&oacute;n:</label>
    <input type="text" class="form-control" id="direccion" name="direccion" placeholder="Direcci&oacute;n" asp-for="@usuario.direccion">
    <label for="telefono" class="form-label">Tel&eacute;fono:</label>
    <input type="text" class="form-control" id="telefono" name="telefono" placeholder="Tel&eacute;fono" asp-for="@usuario.telefono">
    <label for="ciudad" class="form-label">Ciudad:</label>
    <input type="text" class="form-control" id="ciudad" name="ciudad" placeholder="Ciudad" asp-for="@usuario.ciudad">
    <hr>
    <button type="submit" class="btn btn-success">Enviar</button>
    </form>
</div>